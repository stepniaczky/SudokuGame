        </Label>
        <ComboBox fx:id="comboBoxSystemDifficult" layoutX="245.0" layoutY="72.0" prefWidth="150.0"
                  prefHeight="30" promptText="%choice_level">
        </ComboBox>
        <Button fx:id="buttonConfirmLevel" layoutX="245.0" layoutY="149.0" mnemonicParsing="false"
                prefWidth="150.0" prefHeight="30" onAction="#onActionButtonConfirmLevel"
                text="%confirm_level">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <!-- RIGHT SIDE -->
        <Button layoutX="568.0" layoutY="5.0" mnemonicParsing="false"
                onAction="#onActionButtonLangPl" prefHeight="20.0" prefWidth="32.0" text="%pl">
            <font>
                <Font size="12.0" />
            </font>
        </Button>
        <Button layoutX="603.0" layoutY="5.0" mnemonicParsing="false"
                onAction="#onActionButtonLangEn" prefHeight="20.0" prefWidth="32.0" text="%en">
            <font>
                <Font size="12.0" />
            </font>
        </Button>
        <Button fx:id="buttonStartGame" layoutX="464.0" layoutY="72.0" mnemonicParsing="false"
                onAction="#onActionButtonStartGame" prefHeight="114.0" prefWidth="136.0"
                text="%start_game">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <!-- LEFT SIDE-->
        <Button layoutX="40.0" layoutY="72.0" mnemonicParsing="false"
                onAction="#onActionButtonLoadFile" prefHeight="38.0" prefWidth="136.0"
                text="%load_file">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button layoutX="40.0" layoutY="110.0" mnemonicParsing="false"
                onAction="#onActionButtonLoadJdbc" prefHeight="38.0" prefWidth="136.0"
                text="%load_jdbc">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button layoutX="40.0" layoutY="148.0" mnemonicParsing="false"
                onAction="#onActionButtonAuthors" prefHeight="31.0" prefWidth="136.0"
                text="%authors_info">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
    </children>
</Pane>
